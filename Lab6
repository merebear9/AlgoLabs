class Solution {
    public boolean isIdealPermutation(int[] nums) {
        int maxToLeft = 0;

        for (int i = 2; i < nums.length; ++i) {
            maxToLeft = Math.max(maxToLeft, nums[i - 2]);

           
            if (maxToLeft > nums[i]) {
                return false;
            }
        }

        return true;
    }
}
        
 
